#include <iostream>
using namespace std;
template < class T > T add (T & a, T & b)
{
  T result = a + b;
  return result;

}

int
main ()
{
  int i = 5;
  int j = 4;
  float m = 2.5;
  float n = 4.4;
  cout << "Addition of i and j is:" << add (i, j);
  cout << "\n";
  cout << "Addition of m and n is:" << add (m, n);
  return 0;
}
